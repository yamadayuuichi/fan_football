.wrraper.margin-top
  .margin-0auto
    .topic-head
      %h3.topic-title
        = @topic.title
      .text-right
        - if user_signed_in? && current_user.id == @topic.user_id
          = link_to edit_topic_path(@topic.id) do
            編集
          = link_to topic_path(@topic.id), method: :delete do
            削除
    .margin-0auto
      .topic-text
        = @topic.text